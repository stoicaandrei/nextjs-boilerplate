# Convex Environment Variables
CONVEX_DEPLOYMENT=your-deployment-url-here

NEXT_PUBLIC_CONVEX_URL=your-convex-url-here

# Resend Email Service
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Resend Webhook (Optional but recommended)
# Get your webhook secret from https://resend.com/webhooks
RESEND_WEBHOOK_SECRET=your_webhook_secret_here

# Clerk
# https://docs.convex.dev/auth/clerk#nextjs
CLERK_JWT_ISSUER_DOMAIN=YOUR_JTW_ISSUER_DOMAIN
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_SECRET_KEY
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup

# Next.js Environment
NEXT_PUBLIC_APP_URL=http://localhost:3000